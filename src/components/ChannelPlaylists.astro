---
import channels from "../data/playlists.json";
---

<style>
  li {
    font-size: 100%;
    color: #dedede; /* https://images.gamebanana.com/img/ss/mods/58c87d7073cdf.jpg */
    font-family:
      roboto slab,
      serif;
  }
</style>
<script>
  import "../data/masonry.pkgd.min.js";
  var elem = document.querySelector(".grid");
  var msnry = new Masonry(elem, {
    // options
    itemSelector: ".grid-item",
    columnWidth: 200,
  });
</script>
<div class="grid-container" id="grid-container">
  <div class="row">
    {
      channels.map((channel) => (
        <>
          <div class="col-6 pb-2 masonry" id="masonry">
            <div class="frostedglass container" id={channel.channel_name}>
              <p class="fs-2 runguszone mb-n">{channel.channel_name}</p>
              {channel.playlists.map((playlist) => (
                <details>
                  <summary class="pb-1 fs-5">{playlist.title}</summary>
                  <div id={playlist.title}>
                    <ol>
                      {playlist.videos.map((video) => (
                        <li class="playlist-link">
                          <a
                            class="alert-link runguszone playlist-link"
                            href={video.url}
                          >
                            {video.title}
                          </a>
                        </li>
                      ))}
                    </ol>
                  </div>
                </details>
              ))}
            </div>
          </div>
        </>
      ))
    }
  </div>
</div>
